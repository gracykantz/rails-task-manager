<h1>Tasks</h1>
<% @tasks.each do |task|  %>
    <%= link_to task_path(task) do %>
    <% if task.completed %>
      <p><i class="far fa-check-square"></i><%= task.title %></p>
    <% else %>
      <p><i class="far fa-square"></i> <%= task.title %></p>
      <% end %>
    <% end %>
<% end %>

<%= link_to "+ Add a new task", new_task_path %>
